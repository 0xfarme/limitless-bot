# ========================================
# NETWORK & RPC SETTINGS
# ========================================
RPC_URL=https://mainnet.base.org
CHAIN_ID=8453

# ========================================
# TARGET WALLET TO COPY
# ========================================
# The wallet address you want to copy trades from
TARGET_WALLET=0x1234567890123456789012345678901234567890

# ========================================
# YOUR TRADING WALLET
# ========================================
# Your private key (without 0x prefix)
PRIVATE_KEY=

# ========================================
# COPY TRADING SETTINGS
# ========================================
# Copy ratio: multiply target's position size (e.g., 0.5 = 50% of their size)
COPY_RATIO=1.0

# Fixed position size instead of ratio (leave empty to use COPY_RATIO)
FIXED_POSITION_SIZE_USDC=

# Minimum position size to copy (ignore smaller positions)
MIN_POSITION_SIZE_USDC=1

# Maximum position size per trade
MAX_POSITION_SIZE_USDC=100

# ========================================
# POSITION ADDITION TRACKING (NEW!)
# ========================================
# Copy when target adds to existing position
COPY_POSITION_ADDITIONS=true

# Only copy additions if target increases position by this % or more
MIN_ADDITION_THRESHOLD_PCT=20

# Maximum amount to copy for an addition
MAX_ADDITION_SIZE_USDC=50

# ========================================
# EXECUTION SETTINGS
# ========================================
# How often to check for new positions (milliseconds)
POLL_INTERVAL_MS=10000

# Slippage tolerance in basis points (150 = 1.5%)
SLIPPAGE_BPS=150

# Gas settings
MAX_GAS_ETH=0.015
GAS_PRICE_GWEI=0.005
CONFIRMATIONS=1

# ========================================
# RISK MANAGEMENT
# ========================================
# Auto-close position if target closes theirs
AUTO_CLOSE_ON_TARGET_EXIT=true

# Stop loss percentage (optional, set to 0 to disable)
STOP_LOSS_PCT=-15

# Take profit percentage (optional, set to 0 to disable)
TAKE_PROFIT_PCT=25

# Maximum concurrent positions to hold
MAX_CONCURRENT_POSITIONS=10

# ========================================
# FILTERING
# ========================================
# Only copy positions in specific categories (comma-separated, leave empty for all)
# Example: crypto,sports,politics
ALLOWED_CATEGORIES=

# Ignore positions in specific categories
IGNORED_CATEGORIES=

# Minimum market liquidity to copy (USDC)
MIN_MARKET_LIQUIDITY=1000

# ========================================
# NOTIFICATION & LOGGING
# ========================================
# Enable detailed logging
VERBOSE_LOGGING=true

# Log file paths
STATE_FILE=data/copy-state.json
TRADES_LOG_FILE=data/copy-trades.log
TRADES_CSV_FILE=data/copy-trades.csv

# ========================================
# SIMULATION MODE
# ========================================
# Test mode - tracks positions without executing trades
SIMULATION_MODE=false
SIMULATION_BALANCE_USDC=1000
