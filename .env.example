FREQUENCY=hourly
PRIVATE_KEYS=

# Strategy config
POLL_INTERVAL_MS=5000
BUY_AMOUNT_USDC=2
TARGET_PROFIT_PCT=12
STOP_LOSS_PCT=-8
SLIPPAGE_BPS=1000
MAX_GAS_ETH=0.015
GAS_PRICE_GWEI=0.005
CONFIRMATIONS=2

# Strategy
STRATEGY_MODE=dominant
TRIGGER_PCT=55
TRIGGER_BAND=5

# Time-based risk management (these are the defaults)
