# ========= RPC Configuration =========
RPC_URL=https://mainnet.base.org
CHAIN_ID=8453

# ========= Market Selection =========
# Comma-separated list of oracle IDs to monitor multiple markets
PRICE_ORACLE_ID=58,59,60
FREQUENCY=hourly

# ========= Wallet Configuration =========
# Comma-separated list of private keys (no 0x prefix or with 0x both supported)
PRIVATE_KEYS=0xxxxxxxxx

# ========= Trading Parameters =========
# Universal buy amount (used for all strategies unless overridden)
BUY_AMOUNT_USDC=5

# Per-strategy buy amounts (optional - overrides BUY_AMOUNT_USDC)
# Set different amounts for each strategy to allocate capital differently
# EARLY_BUY_AMOUNT_USDC=3     # Amount for early contrarian strategy
# LATE_BUY_AMOUNT_USDC=10     # Amount for late window strategy

TARGET_PROFIT_PCT=20
SLIPPAGE_BPS=100
POLL_INTERVAL_MS=10000

# ========= Gas Configuration =========
MAX_GAS_ETH=0.015
GAS_PRICE_GWEI=0.005
CONFIRMATIONS=1

# ========= Strategy Timing Settings =========
# Last N minutes before deadline to allow buys
BUY_WINDOW_MINUTES=13

# Don't buy in the last N minutes (too close to deadline)
NO_BUY_FINAL_MINUTES=2

# Stop loss active in last N minutes
STOP_LOSS_MINUTES=2

# Don't buy markets younger than N minutes
MIN_MARKET_AGE_MINUTES=10

# ========= Odds Configuration =========
# Minimum odds to enter a trade (%)
MIN_ODDS=75

# Maximum odds to enter a trade (%)
MAX_ODDS=95

# Sell if position odds drop below this threshold (%) in last N minutes
STOP_LOSS_ODDS_THRESHOLD=40

# ========= Early Contrarian Strategy Settings =========
# Enable early contrarian strategy (buy opposite side when one side dominates)
EARLY_STRATEGY_ENABLED=true

# First N minutes after market creation for contrarian buys
EARLY_WINDOW_MINUTES=30

# Trigger odds threshold - buy opposite side if one side reaches this (%)
EARLY_TRIGGER_ODDS=70

# Profit target for early contrarian positions (%)
EARLY_PROFIT_TARGET_PCT=20

# ========= Partial Sell Settings =========
# Enable partial sells at profit target (sell majority, let remainder ride)
PARTIAL_SELL_ENABLED=true

# Percentage to sell when profit target is reached (keep rest riding)
# Example: PARTIAL_SELL_PCT=90 means sell 90%, keep 10% until market closes
PARTIAL_SELL_PCT=90

# ========= Redemption Settings =========
# Enable automatic redemption of resolved market positions
AUTO_REDEEM_ENABLED=true

# Redemption window start minute (0-59) - markets close at :00, allow time to settle
REDEEM_WINDOW_START=6

# Redemption window end minute (0-59)
REDEEM_WINDOW_END=10

# ========= Simulation Mode =========
# Global simulation mode - set to 'true' to simulate ALL strategies
# Logs saved to simulation/ directory instead of data/
# Set to true to test strategies without spending real money
SIMULATION_MODE=false

# Per-strategy simulation - allows mixing live and simulated strategies
# Options: 'all', 'early', 'late', or combinations like 'early,late'
# Examples:
#   SIMULATE_STRATEGIES=early          # Only simulate early contrarian, run late window live
#   SIMULATE_STRATEGIES=late           # Only simulate late window, run early live
#   SIMULATE_STRATEGIES=early,late     # Simulate both (same as SIMULATION_MODE=true)
#   SIMULATE_STRATEGIES=               # All live (default)
# Note: SIMULATION_MODE=true overrides this setting
SIMULATE_STRATEGIES=

# ========= File Paths (Optional) =========
STATE_FILE=data/state.json
TRADES_LOG_FILE=data/trades.jsonl
STATS_FILE=data/stats.json
REDEMPTION_LOG_FILE=data/redemptions.jsonl

# ========= S3 Upload Configuration (Optional) =========
# Enable uploading logs to S3 for dashboard (set to true to enable)
S3_UPLOAD_ENABLED=false

# S3 bucket name for logs
S3_BUCKET_NAME=limitless-bot-logs

# S3 region
S3_REGION=us-east-1

# AWS credentials (optional if using IAM role or AWS CLI credentials)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# Upload interval in milliseconds (default: 60000 = 1 minute)
S3_UPLOAD_INTERVAL_MS=60000

# ========= Legacy Strategy Settings (Not Used in Current Strategy) =========
# These are kept for backward compatibility but not used in the last-minute timing strategy
STRATEGY_MODE=dominant
TRIGGER_PCT=60
TRIGGER_BAND=5
